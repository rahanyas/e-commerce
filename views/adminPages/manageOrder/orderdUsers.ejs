<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Order Page</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        h1 {
            text-align: center;
            color: #333;
            margin: 20px 0;
            font-size: 2rem;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .user-list {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .user-list th, .user-list td {
            padding: 15px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .user-list th {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

        .user-list tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .user-list tr:hover {
            background-color: #f1f1f1;
        }

        .action-button {
            background-color: #28a745;
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: bold;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s ease;
            display: inline-block;
            text-align: center;
        }

        .action-button:hover {
            background-color: #218838;
        }

        @media screen and (max-width: 768px) {
            .user-list th, .user-list td {
                padding: 10px;
            }

            .action-button {
                padding: 8px 16px;
                font-size: 0.85rem;
            }
        }
    </style>
</head>
<body>
    <h1>Admin Order Management</h1>
    <div class="container">
        <table class="user-list">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
                <tr>
                    <td><%= user.fullName %></td>
                    <td><%= user.email %></td>
                    <td>
                        <a href="/viewOrderDetails/<%= user._id %>" class="action-button">See Order Details</a>
                    </td>
                </tr>
              <% }) %>
                
            </tbody>
        </table>
    </div>
</body>
</html>
