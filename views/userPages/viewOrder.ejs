<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Orders</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container my-5">
    <!-- Page Header -->
    <div class="text-center mb-5">
      <h1>Your Orders</h1>
      <p class="text-muted">Here is a summary of all your orders, grouped by date.</p>
    </div>

    <!-- Orders Section -->
    <% if (Object.keys(groupedOrders).length > 0) { %>
      <% Object.keys(groupedOrders).forEach(date => { %>
        <div class="card mb-4 shadow-sm">
          <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Orders on <%= date %></h5>
            <button 
              class="btn btn-light btn-sm" 
              data-bs-toggle="collapse" 
              data-bs-target="#orderDetails-<%= date %>" 
              aria-expanded="false" 
              aria-controls="orderDetails-<%= date %>"
            >
              View Details
            </button>
          </div>
          <div id="orderDetails-<%= date %>" class="collapse">
            <div class="card-body">
              <% groupedOrders[date].forEach(order => { %>
                <div class="border-bottom pb-3 mb-3">
                  <h6>Order #<%= order.id %></h6>
                  <p><strong>Total Amount:</strong> $<%= order.items.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) %></p>
                  <p><strong>Delivery Address:</strong> <%= order.address %></p>
                  <p><strong>ZIP Code:</strong> <%= order.zip %></p>
                  <!-- Pass the date in the URL for viewing full details -->
                  <a href="/order-details/<%= order.id %>?date=<%= date %>" class="btn btn-outline-primary btn-sm">View Full Details</a>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="alert alert-warning text-center">
        <p>No orders found!</p>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
