<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>my account</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">


  <%- include('../partials/header.ejs') %>

</head>
<body>
 
  <style>
    .card {
      transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease;
      border: 1px solid grey;
    }

    .card:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      background-color: #f1f1f1;
    }

    .card-title {
      font-weight: 600;
    }

    a{
      text-decoration: none;
    }

  </style>

  <%- include('../partials/navbar.ejs') %>


  <!-- Content -->
  <div class="container mt-5">
    <div class="row g-4"> <!-- Added g-4 for gap -->
      <div class="col-md-6">
        <a href="/userInfo" class="text-decoration-none">
          <div class="card">
            <div class="card-img-top text-center p-4">
              <i class="fa-solid fa-user fa-4x"></i>
            </div>
            <div class="card-body text-center">
              <h5 class="card-title">Personal Information</h5>
            </div>
          </div>
        </a>
      </div>
  
      <div class="col-md-6">
        <a href="/wishlistPage" class="text-decoration-none">
          <div class="card">
            <div class="card-img-top text-center p-4">
              <i class="fa-solid fa-heart fa-4x"></i>
            </div>
            <div class="card-body text-center">
              <h5 class="card-title">wishlist</h5>
            </div>
          </div>
        </a>
      </div>
  
      <div class="col-md-6">
        <a href="/shoping-cart" class="text-decoration-none">
          <div class="card">
            <div class="card-img-top text-center p-4">
              <i class="fa-solid fa-cart-shopping fa-4x"></i>
            </div>
            <div class="card-body text-center">
              <h5 class="card-title">cart</h5>
            </div>
          </div>
        </a>
      </div>
  
      <div class="col-md-6">
        <a href="/ordersDate" class="text-decoration-none">
          <div class="card">
            <div class="card-img-top text-center p-4">
              <i class="fa-solid fa-box fa-4x"></i>
            </div>
            <div class="card-body text-center">
              <h5 class="card-title">view orders</h5>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
  
  

  <%- include('../partials/script.ejs') %>
</body>
</html>
