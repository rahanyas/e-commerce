<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>payment page</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
    rel="stylesheet">
</head>
<body>

<!-- Custom CSS -->
<style>
  .address {
    width: 100%;
    padding: 15px;
    background-color: #f8f9fa;
    color: #333;
    border-radius: 8px;
    overflow: auto;
    text-align: left;
    margin-bottom: 20px;
  }

  .accordion-button {
    font-weight: 600;
    font-size: 1.2rem;
    background-color: #007bff;
    color: #fff;
  }



  .address p {
    word-wrap: break-word;
  }

  .btn-custom {
    background-color: #ffc107;
    color: #000;
    border-radius: 5px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

  .btn-custom:hover {
    background-color: #e0a800;
  }

  .product-img {
    max-width: 25%;
    height: auto;
    border-radius: 8px;
  }

  .order-summary h4 {
    font-size: 1.25rem;
    margin-bottom: 15px;
  }

  .payment-methods .form-check-label {
    font-size: 1.1rem;
  }

  .payment-methods .form-check-input {
    margin-right: 10px;
  }

  .payment-methods {
    margin-bottom: 20px;
  }
</style>

<h1 class="text-center mt-4">Checkout</h1>

<div class="accordion mt-5 container" id="accordionPanelsStayOpenExample">
  <!-- Select Address Section -->
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
        Select Address
      </button>
    </h2>
    <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
      <div class="accordion-body">
        <div class="row justify-content-center align-items-center mt-3 g-4">
          <div class="col-md-4 text-center">
            <h4>Delivery Address</h4>
          </div>
          <div class="col-md-4 text-center">
            <div class="address">
              <% if (user) { %>
                <p><%= user.address %></p>
              <% } else { %>
                <p>No address found. Please update your address.</p>
              <% } %>
            </div>
          </div>
          <div class="col-md-4 text-center">
            <button type="button" class="btn btn-custom">Change Address</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Select Payment Section -->
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
        Select Payment
      </button>
    </h2>
    <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
      <div class="accordion-body payment-methods">
        <div class="row">
          <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="paymentMethod" id="stripe" value="stripe">
              <label class="form-check-label" for="razorpay">Stripe</label>
              <br>
              <button  id="stripe-proceed-btn" class="btn btn-success mt-2" type="button">proceed</button>
            </div>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="cod">
              <label class="form-check-label" for="cod">Cash on Delivery</label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Product Details Section -->
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
        Order Details
      </button>
    </h2>
    <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
      <div class="accordion-body">
        <% if (cart) { %>
          <% cart.forEach(item => { %>
            <div class="row my-4 text-upperCase">
              <div class="col-md-4 text-center">
                <img src="<%= item.products.images[0]?.url %>" alt="<%= item.products.name %>" class="product-img"/>
              </div>
              <div class="col-md-8">
                <h4><%= item.products.name %></h4>
                <p><strong>Price:</strong> $<%= item.price %></p>
                <p><strong>Description:</strong> <%= item.products.description %></p>
                <p><strong>Quantity:</strong> <%= item.quantity %></p>
                <p><strong>Subtotal:</strong> $<%= item.subTotal %></p>
              </div>
            </div>
            <hr>
          <% }) %>
        <% } %>
        <div class="order-summary">
          <div class="d-flex">
          <h4 class="align-items-center"><strong>Total Price:</strong> $<%= totalPrice %></h4>
            <button type="button" class="btn btn-success ms-auto" id="purchase-btn">proceed</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
  <script src="https://js.stripe.com/v3/"></script>
   <script>

$(document).ready(function() {
    console.log('jQuery is working');
    // Initially hide both buttons
    $('#stripe-proceed-btn').hide();
    $('#purchase-btn').hide();

    // Show the appropriate button when either payment method is selected
    $('#stripe, #cod').click(function() {
        console.log('Payment method selected'); // Log to confirm this is firing
        $('#stripe-proceed-btn').hide();
        $('#purchase-btn').hide();

        if ($('#stripe').is(':checked')) {
            $('#stripe-proceed-btn').show();  // Show Stripe button
        } else if ($('#cod').is(':checked')) {
            $('#purchase-btn').show();  // Show COD button
        }
    });

    const stripe = Stripe("<%= stripeKey %>");

   $(document).ready(function() {
  $('#stripe-proceed-btn').click(function() {
    console.log("Button clicked");
    
    // Assuming you're using fetch or Axios to send the request to create a session:
fetch('/create-checkout-session', {
  method: 'POST',
  headers: {
    'Content-Type': 'application/json',
  },
  body: JSON.stringify({ /* any required data here */ }),
})
  .then((response) => response.json())
  .then((session) => {
    // Redirect to Stripe checkout
    return stripe.redirectToCheckout({ sessionId: session.id });
  })
  .then((result) => {
    if (result.error) {
      // Display error to your customer (e.g., insufficient funds)
      alert(result.error.message);
    }
  })
  .catch((error) => {
    console.error("Error:", error);
  });

  });
});
});
  </script>



</body>
</html>