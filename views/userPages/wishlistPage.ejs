<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>wish list page</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
  
  <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light ">
		<div class="container-fluid">
		
			<a class="navbar-brand" href="/">coza store</a>
	
	
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
	
		
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav ms-auto">
					<li class="nav-item">
						<a class="nav-link active" aria-current="page" href="/">Home</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/product">Shop</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/shoping-cart">Cart</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/profile">My Profile</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/contact">Contact</a>
					</li>
					<% if (!user) { %>
						<li class="nav-item">
							<a class="nav-link" href="/login">Sign-In</a>
						</li>
					<% } %>

				</ul>
			</div>
		</div>
	</nav>
  
  <div class="container my-5">
    
    <% if (products && products.length > 0) { %>
      <% products.forEach(item => { %>
        <div class="card mb-3 shadow-sm p-3 bg-white rounded">
          <div class="row g-0 align-items-center">
            <!-- Product Image -->
            <div class="col-md-3 text-center">
              <img src="<%= item.images[0]?.url %>" alt="Product Image" class="img-fluid w-25">
            </div>
            <!-- Product Info -->
            <div class="col-md-5 text-center">
              <div class="card-body text-uppercase">
                <h5 class="card-title"><%= item.brand %></h5>
                <p class="card-text">$<%= item.price %></p>
                <p class="card-text "><%= item.description %></p>
              </div>
            </div>
            <!-- Action Buttons -->
            <div class="col-md-4 text-center">
              <form action="/addtoCart/<%= item._id %>" method="post">
                <button type="submit" class="btn btn-warning mb-2">Add to Cart</button>
                <p id="cart-msg"></p>
              </form>
              <form action="/removeItem/<%= item._id %>" method="post">
                <button type="submit" class="btn btn-danger mb-2">Remove</button>
              </form>
              <a href="/productDetail/<%= item._id %>" class="btn btn-outline-secondary">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="alert alert-warning text-center">
        Your wishlist is empty! <a href="/">Continue shopping</a>.
      </div>
    <% } %>
  </div>
  



    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>

</body>
</html>